                    <a class="nav-link" href="/contact">Contact</a>
                </li>
            </ul>
        </div>
    </div>
</nav>

<!-- Page Header -->
<header class="masthead">
    <div class="overlay"></div>
    <div class="container">
        <div class="row">
            <div class="col-lg-8 col-md-10 mx-auto">
                <div class="site-heading">
                    <h1>Connexion</h1>
                </div>
            </div>
        </div>
    </div>
</header>

<!-- Main Content -->
<div class="container-fluid">
<div class="row">
    <form action="/login" method="post" class="col-sm-offset-2 col-sm-8">
        <!-- Le pseudo -->
        <div class="form-group">
            <label for="name">Votre adresse mail :</label>
            <input type="text" class="form-control input-sm" name="email"
                   placeholder="Votre adresse mail ..." value="{{ users.email}}">
        </div>

        <!-- Le mot de passe -->
        <div class="form-group">
            <label for="pass">Votre mot de passe :</label>
            <input type="password" class="form-control input-sm" name="pass"
                   placeholder="Entrez votre mot de passe ...">
        </div>

        <div class="row">
            <div class="checkbox">
                <label>
                    <input type="checkbox" name="remember">
                    Se souvenir de moi
                </label>
            </div>
        </div>

        <button type="submit" class="btn btn-primary btn-block">
            Se connecter
        </button>
    </form>
</div>
</div>

<hr>



